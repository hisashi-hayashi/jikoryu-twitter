<!DOCTYPE html>
<html>
  <head>
    <title>自己流Twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if login? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="navbar-collapse" id="navbarColor03">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to('ホーム', tweets_path, class: 'nav-link') %>
            </li>
            <li class="nav-item">
              <%= link_to('ツイート', new_tweet_path, class: 'nav-link') %>
            </li>
            <% if admin? %>
              <li class="nav-item">
                <%= link_to('ユーザ管理', users_path, class: 'nav-link') %>
              </li>
            <% end %>
            <li class="nav-item">
              <%= link_to('ログアウト', logout_path, method: :delete, class: 'nav-link') %>
            </li>
          </ul>
          <span>
            <%= "ログイン中のユーザ： #{current_user.name}" %>
          </span>
        </div>
      </nav>
    <% end %>
    <div class='container'>
      <% if flash[:notice] %>
        <div class='alert alert-success'><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div class='alert alert-danger'><%= flash[:alert] %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
