<h1>ログイン</h1>

<%= form_tag login_path do %>
  <div class="field">
    <%= label_tag 'メールアドレス' %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag 'パスワード' %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag 'ログイン' %>
  </div>
<% end %>

<%= link_to 'ユーザ登録', new_user_path %>
