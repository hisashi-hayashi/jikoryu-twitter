<div class='mx-auto' style='max-width:500px; margin-top: 25%'>
  <div class='my-auto'>
    <h4>ログイン</h4>
    <%= form_tag login_path do %>
      <div class='form-group'>
        <%= text_field_tag(:email, '', class: 'form-control', placeholder: 'メールアドレス') %>
      </div>

      <div class='form-group'>
        <%= password_field_tag(:password, '', class: 'form-control', placeholder: 'パスワード') %>
      </div>

      <div class='form-group'>
        <%= submit_tag('ログイン', class: 'btn btn-secondary') %>
      </div>
    <% end %>
    <div>
      <%= link_to 'ユーザ登録', new_user_path %>
    </div>
  </div>
</div>

